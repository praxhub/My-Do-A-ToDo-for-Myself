<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_container_bg_dark"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/widget_title_dark_fixed"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_task_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_add_task"
            android:padding="4dp"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="0 unfinished task(s)"
        android:textColor="@color/widget_subtitle_dark_fixed"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/widget_empty_text"
            android:textColor="@color/widget_empty_dark_fixed"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/task_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_row_bg_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/task_checkbox_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_toggle_task"
                android:padding="4dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/task_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_task_title_dark_fixed"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/task_edit_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_edit_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/task_delete_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_delete_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_row_bg_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/task_checkbox_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_toggle_task"
                android:padding="4dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/task_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_task_title_dark_fixed"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/task_edit_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_edit_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/task_delete_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_delete_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_row_bg_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/task_checkbox_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_toggle_task"
                android:padding="4dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/task_title_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_task_title_dark_fixed"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/task_edit_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_edit_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/task_delete_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_delete_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_row_bg_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/task_checkbox_4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_toggle_task"
                android:padding="4dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/task_title_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_task_title_dark_fixed"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/task_edit_4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_edit_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/task_delete_4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_delete_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_row_bg_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/task_checkbox_5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_toggle_task"
                android:padding="4dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/task_title_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_task_title_dark_fixed"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/task_edit_5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_edit_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/task_delete_5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_delete_task"
                android:padding="4dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/open_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_row_bg_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/open_app_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/widget_open_app"
            android:src="@android:drawable/ic_menu_view" />

        <TextView
            android:id="@+id/open_app_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/widget_open_short"
            android:textColor="@color/widget_title_dark_fixed"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
